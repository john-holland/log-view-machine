{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/node_modules/**"
  ]
}
