# Premium Modding Platform - Development Environment
# All feature toggles enabled for testing

# Server Configuration
PORT=3003
EDITOR_PORT=3003
NODE_ENV=development

# Feature Toggles (All Enabled for Testing)
ENABLE_BACKEND_API_REQUESTS=true
ENABLE_PREMIUM_EDITOR=true
ENABLE_MOD_MARKETPLACE=true
ENABLE_TOKEN_SYSTEM=true
ENABLE_DONATIONS=true
DEVELOPER_MODE=true

# Unleash Feature Toggle Service (Optional)
UNLEASH_URL=http://localhost:4242/api
UNLEASH_CLIENT_KEY=default:development.unleash-insecure-api-token
UNLEASH_APP_NAME=wave-reader-premium
UNLEASH_ENVIRONMENT=development

# Authentication
JWT_SECRET=dev-secret-key-change-in-production
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database (PostgreSQL - Not Connected Yet)
DATABASE_URL=postgresql://localhost:5432/wave_reader_premium
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wave_reader_premium
DB_USER=postgres
DB_PASSWORD=password

# Mod Storage
MODS_WAREHOUSE_PATH=./mods-warehouse
MAX_MOD_VERSIONS=50

# History System
HISTORY_MAX_SIZE=50
HISTORY_SESSION_TIMEOUT=3600000

# Component Whitelist
WHITELIST_PATH=./src/config/component-whitelist.json

# Logging
LOG_LEVEL=debug
ENABLE_TRACING=true
ENABLE_DATADOG=false

# Development Settings
HOT_RELOAD=true
AUTO_SAVE_INTERVAL=2000
PREVIEW_REFRESH_DELAY=1000

# Testing
TEST_MODE=true
MOCK_EXTERNAL_APIS=true
SKIP_AUTHENTICATION=false


