{
  "name": "mod",
  "version": "1.0.0",
  "description": "Mod stack: editor, ecommerce, index - consolidated startup",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node scripts/start-all.js",
    "start:editor": "npm run start --workspace=node-mod-editor",
    "start:ecommerce": "npm run start --workspace=node-fish-burger",
    "start:index": "cd kotlin-mod-index && gradle run",
    "build": "npm run build:editor && npm run build:index",
    "build:editor": "npm run build --workspace=node-mod-editor",
    "build:index": "node -e \"require('child_process').execSync('cd kotlin-mod-index && ' + (process.platform === 'win32' ? 'gradlew.bat' : './gradlew') + ' build -x test', {stdio:'inherit'})\""
  },
  "workspaces": [
    "node-mod-editor",
    "node-fish-burger",
    "examples/fish-burger-mod"
  ]
}
